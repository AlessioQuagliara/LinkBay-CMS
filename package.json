    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.15.5",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
