    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "htmx.org": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-azure-ad": "^4.3.5",
    "passport-github2": "^0.1.12",
