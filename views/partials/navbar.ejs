<ul class="flex items-center space-x-4">
  <% if (typeof user !== 'undefined' && user) { %>
    <li><a href="/dashboard" class="text-sm text-gray-700 hover:text-gray-900">Dashboard</a></li>
    <li><a href="/account" class="text-sm text-gray-700 hover:text-gray-900">Account</a></li>
    <% if (user.is_admin) { %>
      <li><a href="/admin" class="text-sm text-indigo-600 hover:text-indigo-800">Admin</a></li>
    <% } %>
    <li>
      <form action="/logout" method="post" class="inline">
        <button type="submit" class="text-sm text-gray-700 hover:text-gray-900">Logout</button>
      </form>
    </li>
  <% } else { %>
    <li><a href="/login" class="text-sm text-gray-700 hover:text-gray-900">Login</a></li>
    <li><a href="/register" class="text-sm text-indigo-600 hover:text-indigo-800">Sign up</a></li>
  <% } %>
</ul>
