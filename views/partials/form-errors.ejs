<% if (errors && Object.keys(errors).length) { %>
  <div id="error-container" class="space-y-2">
    <% Object.keys(errors).forEach(function(k){ %>
      <div class="p-2 text-sm text-red-800 bg-red-50 border border-red-100 rounded"><%= errors[k] %></div>
    <% }); %>
  </div>
<% } else { %>
  <!-- no errors -->
  <div id="error-container"></div>
<% } %>
