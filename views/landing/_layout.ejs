<!DOCTYPE html>
<html lang="it" x-data="{ darkMode: false, mobileMenuOpen: false }" x-init="(function(){ try{ var v=localStorage.getItem('darkMode'); if(v===null){ darkMode = true; } else { darkMode = JSON.parse(v); } document.documentElement.classList.toggle('dark', darkMode); $watch('darkMode', function(val){ try{ localStorage.setItem('darkMode', JSON.stringify(val)); document.documentElement.classList.toggle('dark', val); }catch(e){} }); }catch(e){} })()" class="h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LinkBayCMS - <%= typeof title !== 'undefined' ? title : 'Home' %></title>
  <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Piattaforma di e-commerce avanzata' %>">
  <meta name="keywords" content="<%= typeof keywords !== 'undefined' ? keywords : 'e-commerce, piattaforma, online store' %>">
  <meta name="author" content="Quagliara Alessio">
  <meta name="theme-color" content="#ff5758">

  <!-- Open Graph / Social Meta -->
  <meta property="og:title" content="LinkBayCMS - <%= typeof title !== 'undefined' ? title : 'Home' %>">
  <meta property="og:description" content="<%= typeof description !== 'undefined' ? description : 'Piattaforma di e-commerce avanzata' %>">
  <meta property="og:image" content="/static/images/social/og-home.jpg">
  <meta property="og:url" content="https://www.linkbay-cms.com">
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="LinkBayCMS">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:creator" content="@linkbaycms">

  <!-- Tailwind CSS -->
  <!-- Favicons -->
  <link rel="apple-touch-icon" sizes="180x180" href="/media/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/media/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/media/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="shortcut icon" href="/media/favicon.ico">
  <script>
    // Apply dark class early to avoid FOUC based on saved preference
    try {
      var _dm = localStorage.getItem('darkMode');
      if (_dm === null) _dm = 'true';
      if (JSON.parse(_dm)) document.documentElement.classList.add('dark');
    } catch (e) {}
  </script>

  <!-- Alpine.js & HTMX -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <script src="https://unpkg.com/htmx.org@1.9.6"></script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Electrolize&display=swap" rel="stylesheet">

  <!-- Compiled CSS -->
  <link href="/public/css/output.css" rel="stylesheet">

  <style>
  [x-cloak] { display: none !important; }
    body { font-family: 'Electrolize', sans-serif; }
    .font-electrolize { font-family: 'Electrolize', sans-serif; }
  </style>
</head>
<body x-cloak class="min-h-screen bg-white text-gray-900 font-electrolize" :class="darkMode ? 'min-h-screen bg-gray-900 text-gray-100 font-electrolize' : 'min-h-screen bg-white text-gray-900 font-electrolize'">
  <!-- Navbar -->
  <header :class="darkMode ? 'bg-gray-800 shadow-lg sticky top-0 z-50' : 'bg-white shadow sticky top-0 z-50'">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="flex items-center space-x-4">
                <a href="/" class="inline-flex items-center" aria-label="LinkBay CMS">
                  <img src="/media/lb-logo-w.svg" :src="darkMode ? '/media/lb-logo-w.svg' : '/media/linkbay_logo.svg'" alt="LinkBay CMS" style="height:36px; width:auto;" />
                </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a href="/features" :class="darkMode ? 'text-gray-300 hover:text-primary transition-colors' : 'text-gray-700 hover:text-primary transition-colors'"> <%= typeof t === 'function' ? t('features') : 'Features' %></a>
        <a href="/pricing" :class="darkMode ? 'text-gray-300 hover:text-primary transition-colors' : 'text-gray-700 hover:text-primary transition-colors'"> <%= typeof t === 'function' ? t('pricing') : 'Pricing' %></a>
        <a href="/docs" :class="darkMode ? 'text-gray-300 hover:text-primary transition-colors' : 'text-gray-700 hover:text-primary transition-colors'"> <%= typeof t === 'function' ? t('documentation') : 'Documentation' %></a>
      </nav>

      <!-- Auth Buttons & Dark Mode Toggle -->
      <div class="flex items-center space-x-4">
        <!-- Dark Mode Toggle -->
        <button @click="darkMode = !darkMode" class="text-gray-300 hover:text-primary transition-colors">
          <span x-show="!darkMode"><i class="fa-solid fa-moon"></i></span>
          <span x-show="darkMode"><i class="fa-solid fa-sun"></i></span>
        </button>

            <a href="/login" :class="darkMode ? 'text-gray-300 hover:text-primary transition-colors' : 'text-gray-700 hover:text-primary transition-colors'"> <%= typeof t === 'function' ? t('login') : 'Login' %></a>
            <a href="/signup"
              class="px-4 py-2 rounded-md transition-colors
                   bg-primary text-white hover:bg-primary-dark
                   dark:bg-primary dark:text-white dark:hover:bg-primary-dark">
              <%= typeof t === 'function' ? t('get-started') : 'Get Started' %>
            </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button @click="mobileMenuOpen = !mobileMenuOpen" class="text-gray-300 hover:text-primary">
          <i class="fa-solid fa-bars text-xl"></i>
        </button>
      </div>
    </div>

  <!-- Mobile Navigation -->
    <div x-show="mobileMenuOpen" x-transition :class="darkMode ? 'md:hidden py-4 border-t border-gray-700' : 'md:hidden py-4 border-t border-gray-200'">
      <div class="flex flex-col space-y-4">
        <a href="/features" :class="darkMode ? 'text-gray-300 hover:text-primary transition-colors' : 'text-gray-700 hover:text-primary transition-colors'"> <%= typeof t === 'function' ? t('features') : 'Features' %></a>
        <a href="/pricing" :class="darkMode ? 'text-gray-300 hover:text-primary transition-colors' : 'text-gray-700 hover:text-primary transition-colors'"> <%= typeof t === 'function' ? t('pricing') : 'Pricing' %></a>
        <a href="/docs" :class="darkMode ? 'text-gray-300 hover:text-primary transition-colors' : 'text-gray-700 hover:text-primary transition-colors'"> <%= typeof t === 'function' ? t('documentation') : 'Documentation' %></a>
        <a href="/login" :class="darkMode ? 'text-gray-300 hover:text-primary transition-colors' : 'text-gray-700 hover:text-primary transition-colors'"> <%= typeof t === 'function' ? t('login') : 'Login' %></a>
      </div>
    </div>
  </div>
</header>

  <!-- Main Content -->
  <%- body %>

  <!-- Footer -->
  <footer class="bg-gray-800 border-t border-gray-700 mt-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <h3 class="text-lg font-semibold text-white mb-4">LinkBayCMS</h3>
        <p class="text-gray-400 mb-4">La piattaforma di e-commerce più avanzata per creare negozi online professionali.</p>
        <div class="flex space-x-4">
          <a href="#" class="text-gray-400 hover:text-primary transition-colors"><i class="fab fa-twitter"></i></a>
          <a href="#" class="text-gray-400 hover:text-primary transition-colors"><i class="fab fa-facebook"></i></a>
          <a href="#" class="text-gray-400 hover:text-primary transition-colors"><i class="fab fa-linkedin"></i></a>
          <a href="#" class="text-gray-400 hover:text-primary transition-colors"><i class="fab fa-github"></i></a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-md font-semibold text-white mb-4">Link Veloci</h4>
        <ul class="space-y-2">
          <li><a href="/features" class="text-gray-400 hover:text-primary transition-colors">Features</a></li>
          <li><a href="/pricing" class="text-gray-400 hover:text-primary transition-colors">Pricing</a></li>
          <li><a href="/docs" class="text-gray-400 hover:text-primary transition-colors">Documentazione</a></li>
          <li><a href="/blog" class="text-gray-400 hover:text-primary transition-colors">Blog</a></li>
        </ul>
      </div>

      <!-- Support -->
      <div>
        <h4 class="text-md font-semibold text-white mb-4">Supporto</h4>
        <ul class="space-y-2">
          <li><a href="/help" class="text-gray-400 hover:text-primary transition-colors">Help Center</a></li>
          <li><a href="/contact" class="text-gray-400 hover:text-primary transition-colors">Contattaci</a></li>
          <li><a href="/status" class="text-gray-400 hover:text-primary transition-colors">Status</a></li>
          <li><a href="/privacy" class="text-gray-400 hover:text-primary transition-colors">Privacy</a></li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-700 mt-8 pt-6 text-sm text-gray-400">
      <p>© <%= new Date().getFullYear() %> LinkBay CMS — Tutti i diritti riservati</p>
    </div>
  </div>
</footer>

  <!-- Tracking Script (HTMX version) -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      try { if (typeof htmx !== 'undefined') {
        htmx.ajax('POST', '/api/track-visit', { values: { page: window.location.pathname, referrer: document.referrer } });
      }} catch(e) {}
    });
  </script>

  <%- typeof extra_scripts !== 'undefined' ? extra_scripts : '' %>
</body>
</html>
