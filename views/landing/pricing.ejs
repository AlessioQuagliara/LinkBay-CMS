        billingCycle: 'annual',
        // Funzione per calcolare il prezzo mensile con rincaro del 20%
        getMonthlyPrice(annualPrice) {
            return Math.round(annualPrice * 1.2);
        }
    }));

    if (typeof Alpine !== 'undefined' && Alpine && typeof Alpine.data === 'function') {
        register();
    } else {
        document.addEventListener('alpine:init', register);
    }
})();

// Script per il calcolatore ROI interattivo (rimane basato su DOM)
document.addEventListener('DOMContentLoaded', function() {
    const clientSlider = document.getElementById('clientSlider');
    const timeSlider = document.getElementById('timeSlider');
    const clientValue = document.getElementById('clientValue');
    const timeValue = document.getElementById('timeValue');
    const savingsValue = document.getElementById('savingsValue');
    
    function updateROI() {
        const clients = parseInt(clientSlider.value);
        const hours = parseInt(timeSlider.value);
        
        // Calcolo approssimativo del risparmio
        const savingPerClient = 50; // € risparmiati per cliente
        const savingPerHour = 35;   // € valore di un'ora di lavoro tecnico
        
        const totalSavings = (clients * savingPerClient) + (hours * savingPerHour);
        
        clientValue.textContent = clients;
        timeValue.textContent = hours + 'h';
        savingsValue.textContent = '€' + totalSavings.toLocaleString('it-IT') + '/mese';
    }
    
    if (clientSlider && timeSlider) {
        clientSlider.addEventListener('input', updateROI);
        timeSlider.addEventListener('input', updateROI);
        
        // Inizializza il calcolo
        updateROI();
    }
});
</script>