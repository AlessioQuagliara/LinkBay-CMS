<%- include('../_layout', { title: title }) %>

<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold">Verifica MFA</h1>
  <form action="/verify-mfa" method="post">
    <input type="hidden" name="secret" value="<%= secret %>" />
    <div>
      <label>Codice MFA</label>
      <input name="token" />
    </div>
    <button class="btn btn-primary" type="submit">Verifica</button>
  </form>
</div>
