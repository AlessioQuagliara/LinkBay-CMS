<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <style>
      /* Allow passing customStyles variable to override branding */
      <%= customStyles || '' %>

      /* Fallback sensible defaults */
      .email-wrapper { width:100%; background-color:#f4f4f5; padding:20px 0; }
      .email-body { width:100%; max-width:600px; margin:0 auto; background:#ffffff; border-radius:6px; overflow:hidden; }
      .email-header { padding:20px; text-align:left; }
      .email-content { padding:24px; font-family: Arial, Helvetica, sans-serif; color:#333333; font-size:16px; line-height:1.4; }
      .btn { display:inline-block; padding:12px 20px; color:#ffffff !important; text-decoration:none; border-radius:4px; }
      @media only screen and (max-width:600px) {
        .email-content { padding:16px; font-size:15px; }
        .email-header { padding:12px; }
      }
    </style>
  </head>
  <body style="margin:0;padding:0;">
    <table class="email-wrapper" width="100%" cellpadding="0" cellspacing="0" role="presentation">
      <tr>
        <td align="center">
          <table class="email-body" cellpadding="0" cellspacing="0" role="presentation">
            <tr>
              <td class="email-header" style="background:<%= brandColor || '#0f172a' %>;color:<%= brandTextColor || '#ffffff' %>">
                <h2 style="margin:0;font-family: Arial, Helvetica, sans-serif;"> <%= tenantName || '' %> </h2>
              </td>
            </tr>
            <tr>
              <td class="email-content">
                <!-- body content injected by specific templates -->
                <%- body %>
              </td>
            </tr>
            <tr>
              <td style="padding:16px;font-size:12px;color:#888888;text-align:center;">
                <p style="margin:0;">&copy; <%= new Date().getFullYear() %> <%= tenantName || 'Your Company' %></p>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
