<!doctype html>
<html lang="en" class="h-full">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/main.css">
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="h-full bg-gray-100 font-sans">
  <div class="min-h-full flex">
    <!-- Sidebar -->
    <aside x-data="{ open: true }" class="w-64 bg-white border-r hidden md:block">
      <div class="p-4 border-b">
        <div class="text-lg font-bold"><%= (req as any).tenant && (req as any).tenant.name ? (req as any).tenant.name : 'Tenant' %></div>
      </div>
      <nav class="p-4 space-y-2">
        <a href="/dashboard" class="block px-3 py-2 rounded hover:bg-gray-50">Dashboard</a>
        <a href="/sites" class="block px-3 py-2 rounded hover:bg-gray-50">Siti</a>
        <a href="/pages" class="block px-3 py-2 rounded hover:bg-gray-50">Pages</a>
        <a href="/products" class="block px-3 py-2 rounded hover:bg-gray-50">Prodotti</a>
        <a href="/orders" class="block px-3 py-2 rounded hover:bg-gray-50">Ordini</a>
        <a href="/settings" class="block px-3 py-2 rounded hover:bg-gray-50">Impostazioni</a>
      </nav>
    </aside>

    <div class="flex-1">
      <!-- Topbar -->
      <header class="bg-white border-b p-4 flex justify-between items-center">
        <div class="flex items-center space-x-4">
          <button @click="$dispatch('toggle-sidebar')" class="md:hidden px-2 py-1">â˜°</button>
          <div class="text-xl font-semibold">Dashboard</div>
        </div>
        <div>
          <span class="text-sm text-gray-600">Signed in as <strong><%= (req as any).tenant && (req as any).tenant.name ? (req as any).tenant.name : 'User' %></strong></span>
        </div>
      </header>

      <main class="p-6">
        <%- body %>
      </main>
    </div>
  </div>
</body>
</html>
