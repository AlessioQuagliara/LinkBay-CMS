# Frontend Development Dockerfile (Template per tutti i frontend)
FROM node:20-alpine

# Installa dumb-init per signal handling
RUN apk add --no-cache dumb-init

# Crea user non-root
RUN addgroup -g 1001 -S nodejs && \
    adduser -S linkbay -u 1001

# Imposta directory di lavoro
WORKDIR /app

# Copia package files per layer caching
COPY package*.json ./

# Installa dipendenze
RUN npm ci --silent && npm cache clean --force

# Copia source code
COPY --chown=linkbay:nodejs . .

# Cambia utente
USER linkbay

# Esponi porta agency
EXPOSE 3002

# Health check per Vite dev server
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3002/ || exit 1

# Avvia Vite dev server
ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]