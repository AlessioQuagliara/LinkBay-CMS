<h2>Configure <%= integration.name %></h2>
<form method="post" action="/api/tenant/integrations/<%= integration.id %>/configure">
  <% (schema || []).forEach(function(field){ %>
    <div>
      <label><%= field.label %></label>
      <% if (field.type === 'string') { %>
        <input type="text" name="<%= field.name %>" />
      <% } else if (field.type === 'secret') { %>
        <input type="password" name="<%= field.name %>" />
      <% } else if (field.type === 'select') { %>
        <select name="<%= field.name %>"><% (field.options||[]).forEach(function(o){ %><option value="<%= o.value %>"><%= o.label %></option><% }) %></select>
      <% } %>
    </div>
  <% }) %>
  <button type="submit">Save</button>
</form>
