<div>
  <table class="min-w-full divide-y divide-gray-200 bg-white rounded-lg overflow-hidden">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">ID</th>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Titolo</th>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">SKU</th>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Prezzo</th>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Azioni</th>
      </tr>
    </thead>
    <tbody id="products-rows">
      <%- include('products/partials/rows', { rows: rows }) %>
    </tbody>
  </table>
  <% if (nextPage) { %>
    <div class="mt-3 text-center">
      <div hx-get="/api/products?partial=table&page=<%= page+1 %>" hx-trigger="revealed" hx-swap="afterend" class="text-sm text-gray-500">Carica altri...</div>
    </div>
  <% } %>
</div>
