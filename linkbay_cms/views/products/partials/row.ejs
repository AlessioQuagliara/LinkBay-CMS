<tr id="product-<%= p.id %>" class="border-b">
  <td class="px-4 py-2 text-sm"><%= p.id %></td>
  <td class="px-4 py-2 text-sm"><%= p.title %></td>
  <td class="px-4 py-2 text-sm"><%= p.sku %></td>
  <td class="px-4 py-2 text-sm"><%= p.price_cents ? (p.price_cents/100).toFixed(2) : '-' %></td>
  <td class="px-4 py-2 text-sm">
    <button hx-get="/api/products/<%= p.id %>?partial=row" hx-target="#product-<%= p.id %>" hx-swap="outerHTML" class="px-2 py-1 rounded border text-sm">Modifica</button>
    <%- include('partials/components/delete-button', { url: '/api/products/' + p.id, label: 'Elimina', confirmMessage: 'Confermi l\'eliminazione del prodotto?', target: '#products-table' }) %>
  </td>
</tr>
