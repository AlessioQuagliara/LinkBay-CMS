<%- include('../layouts/boilerplate', { title: title }) %>
<% var body = `
  <div class="max-w-md mx-auto mt-12">
    <div class="bg-white p-6 rounded-lg shadow">
      <h2 class="text-2xl font-semibold mb-4">Crea un account</h2>
      <div id="error-container">
        <%- include('../partials/form-errors', { errors: {} }) %>
      </div>
      <form hx-post="/auth/register" hx-target="#error-container" hx-swap="innerHTML" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700">Email</label>
          <input name="email" type="email" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-primary focus:border-primary" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Password</label>
          <input name="password" type="password" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-2 focus:ring-primary focus:border-primary" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Ruolo</label>
          <select name="role" class="mt-1 block w-full rounded-md border-gray-300">
            <option value="customer">Cliente</option>
            <option value="editor">Editor</option>
          </select>
        </div>
        <div class="flex justify-end">
          <button type="submit" class="px-4 py-2 rounded-md bg-primary text-white">Registrati</button>
        </div>
      </form>
    </div>
  </div>
` %>
