<%- include('../layouts/boilerplate', { title: title }) %>
<% var body = `
  <div class="max-w-4xl mx-auto mt-8">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-semibold">API Keys</h1>
      <div class="text-sm text-gray-500">Gestisci chiavi API per integrazioni</div>
    </div>

    <div id="api-keys-area">
      <div id="api-keys-list" class="space-y-3">
        <% if (keys && keys.length) { %>
          <% keys.forEach(function(k){ %>
            <div class="bg-white p-3 rounded shadow flex items-center justify-between">
              <div>
                <div class="text-sm font-medium"><%= k.name %></div>
                <div class="text-xs text-gray-500">Creata: <%= k.created_at %></div>
              </div>
              <div class="flex items-center space-x-3">
                <div x-data="{ show:false }" class="text-sm">
                  <button @click="show = !show" class="px-2 py-1 border rounded">Mostra</button>
                  <span x-show="show" x-cloak class="ml-2 font-mono text-sm text-gray-700"><%= k.key_masked || '••••••••' %></span>
                </div>
                <form hx-delete="/api/settings/api-keys/<%= k.id %>" hx-target="#api-keys-list" hx-swap="outerHTML" class="inline">
                  <button type="submit" class="px-2 py-1 rounded text-sm border text-red-600">Elimina</button>
                </form>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="text-sm text-gray-500">Nessuna API key creata.</div>
        <% } %>
      </div>

      <div class="mt-6 bg-white p-4 rounded shadow">
        <h3 class="text-lg font-medium mb-3">Genera nuova API Key</h3>
        <form hx-post="/api/settings/api-keys" hx-target="#api-keys-list" hx-swap="beforeend" class="space-y-3">
          <div>
            <label class="block text-sm font-medium">Nome chiave</label>
            <input name="name" required class="mt-1 block w-full rounded border-gray-300" />
          </div>
          <div class="flex justify-end">
            <button type="submit" class="px-4 py-2 rounded bg-primary text-white">Genera</button>
          </div>
        </form>
        <div class="mt-3 text-sm text-gray-500">Nota: la chiave completa verrà mostrata solo in questa schermata al momento della creazione.</div>
      </div>
    </div>
  </div>
` %>
