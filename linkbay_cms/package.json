{
  "name": "linkbaycms",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"ts-node\" src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "knex:migrate": "knex migrate:latest --knexfile ./knexfile.ts",
    "knex:seed": "knex seed:run --knexfile ./knexfile.ts",
    "build:css": "postcss src/css/input.css -o public/css/main.css --env production",
    "dev:css": "postcss src/css/input.css -o public/css/main.css --watch",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "lint": "eslint \"src/**/*.{ts,js}\" --max-warnings=0 || true"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  },
  "dependencies": {
    "@sentry/node": "^8.12.0",
    "apollo-server-express": "^3.11.1",
    "archiver": "^5.3.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "graphql": "^16.7.1",
    "helmet": "^6.0.1",
    "i18next": "^25.4.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.8.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.7",
    "pg": "^8.11.0",
    "socket.io": "^4.8.1",
    "stripe": "^11.0.0",
    "swagger-jsdoc": "^6.2.8",
  "swagger-ui-express": "^4.6.3",
  "saml2-js": "4.0.4"
  },
  "optionalDependencies": {
  },
  "dependenciesMeta": {
    "express-rate-limit": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/archiver": "^5.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.12",
    "@types/ejs": "^3.0.8",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.1",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "autoprefixer": "^10.4.14",
    "compression": "^1.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "jest": "^29.6.1",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.32",
    "postcss-cli": "^10.1.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.6"
  }
}
