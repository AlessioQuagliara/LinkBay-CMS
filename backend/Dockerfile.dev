# Backend Development Dockerfile
FROM node:20-alpine

# Installa dumb-init per signal handling corretto
RUN apk add --no-cache dumb-init

# Crea user non-root per sicurezza
RUN addgroup -g 1001 -S nodejs && \
    adduser -S linkbay -u 1001

# Imposta directory di lavoro
WORKDIR /app

# Copia package files per layer caching
COPY package*.json ./

# Installa dipendenze
RUN npm ci --only=production --silent && npm cache clean --force

# Copia source code
COPY --chown=linkbay:nodejs . .

# Cambia utente
USER linkbay

# Esponi porta
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node healthcheck.js

# Avvia con dumb-init per signal handling
ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "run", "dev"]